/*用来包裹所有的小圆点 */
.dots {
 width: 300rpx;
 height: 5rpx;
 display: flex;
 flex-direction: row;
 background: #000;
 position: relative;
 margin-top: -20rpx;
 
}
/*未选中时的小圆点样式 */
.dot {
 width: 100rpx;
 height: 5rpx;
 /* border-radius: 50%; */
