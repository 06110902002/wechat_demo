.outer {
  display: flex;
  flex-direction: row;  
  flex-wrap: wrap;
  width: 1000rpx;
  height: 100%;
}

.home_grids { 
  border-top: 1rpx solid #D9D9D9;
  overflow:hidden;
  margin-top: 10px;
}

.home_grid{
  position: relative;
  float: left;
  /* padding: 20px 10px; */
  height: 220rpx;
  display:flex; 
  flex-direction: column;
  justify-content:center; 
  align-items:center;

  width: 25%;
  box-sizing: border-box; 
  border-right:1rpx solid #D9D9D9;
  border-bottom:1rpx solid #D9D9D9;
}
.home_icon{
  width: 91rpx;
  height: 91rpx;
}
.home_grid_text{
  margin-top: 20rpx;
}

.hot-topic{
  flex-direction: column;
  height: 400rpx;
  background-color: lightgray;
  overflow:hidden; /*当了元素margin-top无效时，使用此属性*/
}
.hot-topic-txt{
  margin-left: 20rpx;
  margin-top:20rpx;
  font-size: 40rpx;
  font-weight: bold;

}


.hot-topic_wrap{
  width: 100%;
  height: 100vh;
  box-sizing: border-box;
}
swiper{
  height: 100%;
}
.content{
  font-size: 16px;
  color: #333;
  padding: 20rpx 40rpx;
  position: relative;
  display: flex;
}
swiper-item{							
  text-align: center;				   
}
swiper-item image{
  width: 100%;
}
.box{								
  width: 80%;
  height: 700rpx;
  display: inline-block;
  flex-direction: column;
  margin-top: 20px;
  box-sizing: border-box;
  box-shadow: 0 0 4px 4px #f2f2f2;  
}

.scroll-view-item{
  display: inline-block;  /*横向滚动必须项*/
  height:160rpx;
  width: 360rpx;
  margin-right: 40rpx;
  margin-left: 40rpx;
  margin-top: 20rpx;
  background-color:white;
}
.tag-txt{
  width: 80rpx;
  background: red;
  color: white;
  font-size: 18rpx;
  padding: 5rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 5rpx;
}
.disscuss-pet-txt-img{
  display: flex;
  align-items: center;
  justify-content: center;
  padding-left: 15rpx;
  padding-right: 15rpx;
  flex-direction: row;
  height:100%;
  background-color: white;
}
.disscuss-txt-parent{
  display: flex;
  align-items: left;
  justify-content: center;  /*垂直居中*/
  flex-direction: column;
  height:100%;
  margin-right: 15rpx;
}

.disscuss-txt{
  
  font-size:24rpx;
  font-weight: bold;

}
.disscuss-txt2{
  
  font-size:18rpx;
  color:gray;
  margin-top:15rpx;
}
.content-name-time{
  display:flex;
  align-items:center;
  flex-direction:row;
  height:80rpx;
  margin:20rpx;
  background:gray;

}
.article-txt-box{
  margin: 20rpx;
  box-sizing:border-box;
  font-size:20rpx;
  overflow:hidden;
  text-overflow: ellipsis;/*超出省略号*/
  display:-webkit-box;/*一定要写*/
  -webkit-line-clamp: 4;/*控制行数*/
  -webkit-box-orient: vertical;/*一定要写*/
  background-color:#abc888; 

}
.article-img{
  display:flex;
  /* align-items:center; */
  flex-direction:row;
  margin-left:20rpx;
  margin-right:20rpx;
  height:180rpx;
  justify-content:space-between;
  background-color:#bb0099;

  position: relative;/*相对定位，子元素的absolute才能生效*/
}


.imgline {
   width:180rpx;
   height:180rpx;
   position: relative;/*相对定位，子元素的absolute才能生效*/
}

.cancelI {
   position: absolute;/*父元素的position位置固定，这个绝对定位才会生效*/
   right: 2px;/*位于父元素的右边 2px*/
   left: auto;
   top: 10px;
}

.item_txt {
   position: absolute;
   bottom: 0px;
   left: 0px;
   width: 100%;
   height: 25px;
   font-size: 13px;
   background-color: #999;
   color: white;
   text-align: center; /*这两行保证文本在text中水平垂直居中*/
   line-height: 25px; /*也可以使用*/
   display:flex;
   flex-direction:column;
   align-items:center;
   justify-content:center;
}
.like-comments{
  flex-direction: row-reverse;
  margin-left:20rpx;
  margin-right:20rpx;
  height:125rpx;
  display:flex;
  align-items:center;
  background-color: #998877;
}



